{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es2020"],
    "target": "es2017",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "module": "nodenext",
    "outDir": "dist",
    "moduleResolution": "nodenext"
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "**/__test__/**", "**/*.config.*"]
}
